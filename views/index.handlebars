<header class="container header">
  <img id="burgerImg" src="assets/img/burger.png" alt="BurgerImg">
  <h1>Eat-Da-Burger!</h1>
</header>


<div class="mainContainer">


  <section class="container contentContainer orderBurger">

    <div class="row">
      <div class="col">

        <h3>Order a Burger</h3>

        <div class="insideContainer">

          <form action="/" method="POST">
            <div class="form-group">
              <label for="burgerName">Burger Name:</label>
              <input type="text" class="form-control" name="burger_name" id="burgerInput">
              <input type="hidden" name="devoured" value="0">
            </div>
            <button class="submit-button btn btn-deep-orange" type="submit">Make my burger!</button>
          </form>

        </div>
      </div>
    </div>

  </section>




  <section class="container contentContainer displayBurgers">
    <div class="row">



      <div class="col-md-6">
        <h3>Burgers that are ready to eat!</h3>
        <div class="insideContainer">

          {{#each burgers}}
          {{#unless devoured}}
          <!-- Card -->
          <div class="card">
            <div class="card-body">

              <h5 class="card-title">{{this.id}}. {{this.burger_name}}</h5>
              
              <!--Devour burger button-->
               {{!-- <button class="devour-burger btn btn-success" data-id="{{this.id}}" data-newDevoured="{{devour}}">DEVOUR IT!</button> --}}
              <form method="POST" action="/{{this.id}}?_method=PUT">
                <input type="hidden" name="devoured" value="1">
                <button class="btn btn-success devour-button" type="submit"><img src="/assets/images/devourit.png" style="height:20px; width:20px;"> Devour it!</button>
              </form>

            </div>
          </div>
          <!-- Card -->
          {{/unless}}
          {{/each}}
         
        </div>
        <!--end of ready to eat inside container--->
      </div>
      <!--end of ready to eat col--->




      <div class="col-md-6">
        <h3 class="devouredTitle">Burgers that have been Devoured!</h3>
        <div class="insideContainer">

          {{#each burgers}}
          {{#if devoured}}
          <!-- Card -->
          <div class="card">
            <div class="card-body">

              <h5 class="card-title">{{this.id}}. {{this.burger_name}}</h5>
              
              <!--Throw away burger button-->
          {{!-- <button class="delete-burger btn btn-danger" data-id="{{this.id}}" data-newDevoured="{{devour}}"><i class="far fa-trash-alt"></i> Throw
            away</button> --}}
            <form action="/{{this.id}}?_method=DELETE" method="POST">
                {{!-- <input type="hidden" name="devoured" value="true"> --}}
                <button class="btn btn-danger delete-button" type="submit"><i class="far fa-trash-alt"></i> Throw away!</button>
              </form>

            </div>
          </div>
          <!-- Card -->
          {{/if}}
          {{/each}}

        </div>
        <!--end of devoured inside container--->
      </div>
      <!--end of devoured col--->





    </div>
    <!--end of displayburgers row--->

  </section>
  <!--end of displayburgers section--->


</div>
<!--end of mainContainer--->


<footer>
  <div class="container footer">
<form action="https://github.com/reneehickman/burger">
    <button type="submit" value="GitHub Repo" class="btn btn-info btn-sm">Github Repo</button>
</form>
</div>
</footer>