<h1>Burgers!</h1>

<h2>Burgers that are ready to eat!</h2>

<ul>
  {{#each burgers}}
  {{#unless this.devoured}}
  {{this.id}}
  {{this.burger_name}}

 <button class="change-devour" data-id="{{id}}" data-newdevoured="{{devoured}}">DEVOUR IT!</button>

  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been Devoured!</h2>

<ul>
  {{#each burgers}}
  {{#if this.devoured}}
  {{this.id}}
  {{this.burger_name}}
	<!--Throw away burger button-->
	<button class="delete-burger btn btn-primary" data-id="{{this.id}}"><i class="far fa-trash-alt"></i> Throw away</button>
  {{/if}}
  {{/each}}
</ul>

<h2>Order a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Create burger!</button>
</form>